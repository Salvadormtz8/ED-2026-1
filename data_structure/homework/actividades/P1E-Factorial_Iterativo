#include<stdio.h>

facTail(int n,int a){
	if (n < 0)
	return 0;
	else if (n == 0)
	return 1;
	else if (n > 1)
	return a;
	else 
	return facTail (n-1, n*a);
}

int main(){
	int a=1, n, f;
	printf("Dame un numero: ");
	scanf("%d", &n);
	f= facTail(n,a);
	printf("El resultdado es: %d",f);
	return 0;
	
}
